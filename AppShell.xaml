<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="campusCare.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:campusCare"
    xmlns:vistas="clr-namespace:campusCare.vistas"
    Title="campusCare"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate vistas:Login}"
        Route="Login" />

    <ShellContent
        Title="HomePacient"
        ContentTemplate="{DataTemplate vistas:HomePacient}"
        Route="HomePacient" />
    <ShellContent
        Title="CRUDpaciente"
        ContentTemplate="{DataTemplate vistas:CRUDpacientes}"
        Route="CRUDpaciente" />
    <ShellContent
        Title="CreateUser"
        ContentTemplate="{DataTemplate vistas:CreateUser}"
        Route="CreateUser" />

</Shell>
