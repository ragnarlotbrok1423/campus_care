<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="campusCare.vistas.HistoryPacient"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:campusCare.vistasModelos"
    Title="HistoryPacient"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <local:HistorialMedicoViewModel />
    </ContentPage.BindingContext>


    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="HistoryTemplate">
                <Frame
                    Margin="0,0,0,10"
                    BackgroundColor="#136AED"
                    BorderColor="Transparent"
                    CornerRadius="10">
                    <Grid RowSpacing="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="calendar2.png" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontFamily="Ubuntu"
                                FontSize="18"
                                Text="Fecha:"
                                TextColor="White" />
                            <Label
                                Grid.Column="2"
                                FontAttributes="Bold"
                                FontFamily="Ubuntu"
                                FontSize="18"
                                Text="{Binding Fecha}"
                                TextColor="White" />
                        </Grid>
                        <Grid Grid.Row="1" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="description.png" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontFamily="Ubuntu"
                                FontSize="18"
                                Text="Motivo:"
                                TextColor="White" />
                            <Label
                                Grid.Column="2"
                                FontAttributes="Bold"
                                FontFamily="Ubuntu"
                                FontSize="18"
                                Text="{Binding TipoConsulta.TipoConsulta}"
                                TextColor="White" />
                        </Grid>
                        <Grid Grid.Row="2" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Image Grid.Column="0" Source="doctor.png" />
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontFamily="Ubuntu"
                                FontSize="18"
                                Text="Doctor:"
                                TextColor="White" />
                            <Label
                                Grid.Column="2"
                                FontAttributes="Bold"
                                FontFamily="Ubuntu"
                                FontSize="18"
                                Text="{Binding Doctores.NombreCompleto}"
                                TextColor="White" />
                        </Grid>

                    </Grid>
                </Frame>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HeightRequest="200">
            <!--  Banner  -->
            <Image
                Grid.Row="0"
                Aspect="Fill"
                HorizontalOptions="Center"
                Source="banner.png"
                VerticalOptions="Center" />

            <!--  Logo superpuesto al banner  -->
            <Image
                Grid.Row="0"
                Margin="0,20,0,0"
                Aspect="Center"
                HorizontalOptions="Center"
                Source="logo.png"
                VerticalOptions="Start" />

            <!--  Texto "Login" superpuesto al banner  -->
            <Label
                Grid.Row="0"
                Margin="0,0,0,20"
                FontFamily="Bungee"
                FontSize="30"
                HorizontalOptions="Center"
                Text="Menú Principal"
                TextColor="#00ffea"
                VerticalOptions="End" />

        </Grid>
        <Button
            Grid.Row="1"
            Margin="0,20,0,0"
            Background="Transparent"
            Clicked="home"
            FontAttributes="Bold"
            FontFamily="Ubuntu"
            FontSize="20"
            HorizontalOptions="Start"
            Text="Volver"
            TextColor="#136AED" />
        <Label
            Grid.Row="2"
            FontFamily="Bungee"
            FontSize="20"
            HorizontalOptions="Center"
            Text="Historial del Paciente"
            TextColor="#07016C" />

