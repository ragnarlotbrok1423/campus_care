        <Label
            Grid.Row="4"
            Margin="20,20,0,0"
            FontAttributes="Bold"
            FontFamily="Ubuntu"
            FontSize="20"
            Text="Citas"
            TextColor="#07016C" />
        <ScrollView Grid.Row="5" Margin="30,20,30,0">
            <CollectionView ItemTemplate="{StaticResource HistoryTemplate}" ItemsSource="{Binding Historial}" />
        </ScrollView>
        <Button
            Grid.Row="6"
            Margin="0,20,0,20"
            Padding="30,0,30,0"
            Background="#07016C"
            Command="{Binding LoadHistorialCommand}"
            CornerRadius="{OnPlatform Android=50,
                                      WinUI=30}"
            FontFamily="Bungee"
            FontSize="20"
            HorizontalOptions="Center"
            Text="Refrescar Historial"
            TextColor="#00FFEA" />



    </Grid>
</ContentPage>